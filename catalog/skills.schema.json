{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["skills"],
  "properties": {
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "runtime", "source", "license", "status", "paths"],
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string", "enum": ["custom", "external"]},
          "runtime": {"type": "array", "items": {"type": "string"}},
          "source": {"type": "string"},
          "license": {"type": "string"},
          "status": {"type": "string", "enum": ["active", "reference", "deprecated"]},
          "paths": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
